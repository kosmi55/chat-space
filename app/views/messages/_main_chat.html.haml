.chat-main
  .main-header
    .main-header_left-box
      .main-header_left-box sss
      .main-header_left-memberlist Member:zzzzzz
    .main-header_edit-btn
      = link_to "Edit", "URL", class: "edit"

  .messages
    .messages_message
    .messages_message_talker ccccc
    .messages_message_date 2019/11/22(Fri) 00:00:00
    .messages_message_text 1234567890

  .footer
    %form
      .footer-left
        %input.message-box{placeholder: "type a message", type: "text"}
        %label.box_icon{for: 'a'}
          = icon('far', 'image', class: "image")
          %input{type: "file" ,class: "box",id: "a"}
      .footer-right
        %input{type: "submit",placeholder: "type-btn" , value: "Send", class:"send-box"}